{
  "name": "git-format-test",
  "version": "1.0.0",
  "repository": "https://github.com/tyankatsu0105/git-format-test.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "lint:style": "stylelint **/*.scss --fix --cache --cache-location '.stylelintcache'",
    "prettier:style": "prettier --write **/*.scss",
    "format:style": "run-s prettier:style lint:style",
    "lint:script": "eslint --fix",
    "prettier:md": "prettier --write"
  },
  "lint-staged": {
    "linters": {
      "*.scss": [
        "prettier --write",
        "stylelint --fix --cache --cache-location '.stylelintcache'",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules/**/*",
      "cz-custom/**/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./cz-custom"
    }
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "markuplint": "^0.31.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "stylelint": "^9.4.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-sass-guidelines": "^5.0.0"
  }
}
